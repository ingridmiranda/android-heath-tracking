<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/texto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                tools:layout_editor_absoluteX="37dp">

                <TextView
                    android:id="@+id/tvCadastro"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp"
                    android:text="Meu prontuário"
                    android:textColor="#707070"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="320dp"
                    android:layout_height="500dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded"
                    android:fadingEdgeLength="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvCadastro">

                    <TextView
                        android:id="@+id/textInformacoes"
                        android:layout_width="102dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="39dp"
                        android:text="Informações Pessoais"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toStartOf="@+id/textInformacoes2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textInformacoes2"
                        android:layout_width="102dp"
                        android:layout_height="48dp"
                        android:text="Informações de Saúde"
                        android:textAlignment="center"
                        android:textColor="#F0F0F0"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/textInformacoes"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textInformacoes"
                        app:layout_constraintTop_toTopOf="@+id/textInformacoes" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="25dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textInformacoes"
                        app:srcCompat="@drawable/icone1" />

                    <TextView
                        android:id="@+id/tvNome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="Maria do Rosário"
                        android:textAlignment="textStart"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                        app:layout_constraintStart_toEndOf="@+id/imageView3"
                        app:layout_constraintTop_toTopOf="@+id/imageView3" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginEnd="15dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/imageView3"
                        app:srcCompat="@drawable/config" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="25dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView3"
                        app:srcCompat="@drawable/retangulo_idade" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="9dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/imageView5"
                        app:layout_constraintVertical_bias="0.0"
                        app:srcCompat="@drawable/retangulo_peso" />

                    <TextView
                        android:id="@+id/tvSexo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Sexo: Feminino"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="@+id/imageView5"
                        app:layout_constraintStart_toStartOf="@+id/imageView5"
                        app:layout_constraintTop_toTopOf="@+id/imageView5" />

                    <TextView
                        android:id="@+id/tvIdade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Idade: 50 anos"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="@+id/tvSexo"
                        app:layout_constraintStart_toStartOf="@+id/tvSexo"
                        app:layout_constraintTop_toBottomOf="@+id/tvSexo" />

                    <TextView
                        android:id="@+id/tvEstadoCivil"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:text="Casada"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="@+id/tvIdade"
                        app:layout_constraintStart_toStartOf="@+id/tvIdade"
                        app:layout_constraintTop_toBottomOf="@+id/tvIdade" />

                    <TextView
                        android:id="@+id/tvPeso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:text="Peso: 112 kg"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="@+id/imageView6"
                        app:layout_constraintHorizontal_bias="0.455"
                        app:layout_constraintStart_toEndOf="@+id/imageView5"
                        app:layout_constraintTop_toTopOf="@+id/imageView6" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Altura:  1.54m"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="@+id/tvPeso"
                        app:layout_constraintStart_toStartOf="@+id/tvPeso"
                        app:layout_constraintTop_toBottomOf="@+id/tvPeso" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="25dp"
                        app:layout_constraintEnd_toEndOf="@+id/imageView6"
                        app:layout_constraintStart_toStartOf="@+id/imageView5"
                        app:layout_constraintTop_toBottomOf="@+id/imageView5"
                        app:srcCompat="@drawable/retangulo_local" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="31.5dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="10dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                        app:layout_constraintStart_toStartOf="@+id/imageView7"
                        app:layout_constraintTop_toTopOf="@+id/imageView7"
                        app:srcCompat="@drawable/casa" />

                    <TextView
                        android:id="@+id/tvLocal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brasília - DF"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
                        app:layout_constraintEnd_toEndOf="@+id/imageView7"
                        app:layout_constraintStart_toStartOf="@+id/imageView7"
                        app:layout_constraintTop_toTopOf="@+id/imageView8" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView7"
                        app:srcCompat="@drawable/retangulo_contato" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="26.3dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
                        app:layout_constraintStart_toStartOf="@+id/imageView9"
                        app:layout_constraintTop_toTopOf="@+id/imageView9"
                        app:srcCompat="@drawable/agenda" />

                    <TextView
                        android:id="@+id/tvTelefone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(061)99999-9999"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
                        app:layout_constraintEnd_toEndOf="@+id/imageView9"
                        app:layout_constraintStart_toStartOf="@+id/imageView9"
                        app:layout_constraintTop_toTopOf="@+id/imageView10" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mrosaio1970@gmail.com"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
                        app:layout_constraintEnd_toEndOf="@+id/imageView9"
                        app:layout_constraintStart_toStartOf="@+id/imageView9"
                        app:layout_constraintTop_toBottomOf="@+id/tvTelefone" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/imgVoltar"
                    android:layout_width="22dp"
                    android:layout_height="0dp"
                    android:src="@drawable/seta_voltar"
                    app:layout_constraintBottom_toBottomOf="@+id/tvCadastro"
                    app:layout_constraintStart_toStartOf="@+id/linearLayout"
                    app:layout_constraintTop_toTopOf="@+id/tvCadastro" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="73dp"
                    android:layout_height="73dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="50dp"
                    android:elevation="10dp"
                    app:layout_constraintEnd_toEndOf="@+id/tvCadastro"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvCadastro"
                    app:srcCompat="@drawable/meus_dados" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="73dp"
                    android:layout_height="73dp"
                    android:layout_marginStart="50dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tvCadastro"
                    app:layout_constraintTop_toTopOf="@+id/imageView"
                    app:srcCompat="@drawable/dados_saude_transparente" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>